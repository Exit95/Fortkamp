---
import config from '../../data/config.json';

interface Props {
  variant?: 'transparent' | 'solid';
}

const { variant = 'solid' } = Astro.props;

const navItems = [
  { label: 'Startseite', href: '/' },
  { label: 'Leistungen', href: '/leistungen/' },
  { label: 'Projekte', href: '/projekte/' },
  { label: 'Kontakt', href: '/kontakt/' }
];
---

<header
  id="site-header"
  class:list={[
    'fixed top-0 left-0 right-0 z-50 transition-all duration-200',
    variant === 'transparent' ? 'bg-transparent' : 'bg-white shadow-sm'
  ]}
  data-variant={variant}
>
  <div class="container">
    <div class="flex items-center justify-between h-16 lg:h-20">
      <a href="/" class="flex items-center group" aria-label="Galabau Fortkamp - Startseite">
        <img
          src="/fortkamplogo.jpeg"
          alt="Galabau Fortkamp Logo"
          class="h-12 lg:h-16 w-auto transition-opacity group-hover:opacity-90"
        />
      </a>

      <nav class="hidden lg:flex items-center gap-8" aria-label="Hauptnavigation">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              "text-sm font-medium transition-colors py-2",
              variant === 'transparent' ? 'text-white hover:text-green-200' : 'text-neutral-700 hover:text-green-600'
            ]}
          >
            {item.label}
          </a>
        ))}
      </nav>

      <div class="flex items-center gap-3">
        <a
          href={`https://wa.me/${config.contact.whatsapp}?text=Hallo,%20ich%20interessiere%20mich%20f%C3%BCr%20Ihre%20Leistungen.`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition-colors"
          data-track="whatsapp_click"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          <span class="hidden sm:inline">WhatsApp</span>
        </a>

        <button
          type="button"
          class:list={[
            "lg:hidden p-2 rounded-lg transition-colors",
            variant === 'transparent' ? 'text-white hover:bg-white/10' : 'text-neutral-700 hover:bg-neutral-100'
          ]}
          aria-label="Menu Ã¶ffnen"
          aria-expanded="false"
          aria-controls="mobile-menu"
          id="mobile-menu-toggle"
        >
          <svg class="w-6 h-6" id="menu-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg class="w-6 h-6 hidden" id="close-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div id="mobile-menu" class="lg:hidden hidden bg-white border-t border-neutral-100">
    <div class="container py-4">
      <nav class="space-y-1" aria-label="Mobile Navigation">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="block px-4 py-3 text-neutral-700 hover:bg-green-50 hover:text-green-700 rounded-lg transition-colors"
          >
            {item.label}
          </a>
        ))}
      </nav>
    </div>
  </div>
</header>

<script>
  const header = document.getElementById('site-header');
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  const variant = header?.dataset.variant;

  if (variant === 'transparent') {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 100) {
        header?.classList.remove('bg-transparent');
        header?.classList.add('bg-white', 'shadow-sm');
        header?.querySelectorAll('[class*="text-white"]').forEach(el => {
          el.classList.remove('text-white', 'hover:text-green-200', 'hover:bg-white/10');
          el.classList.add('text-neutral-700', 'hover:text-green-600', 'hover:bg-neutral-100');
        });
        header?.querySelector('.font-heading')?.classList.remove('text-white', 'group-hover:text-green-100');
        header?.querySelector('.font-heading')?.classList.add('text-neutral-900', 'group-hover:text-green-700');
      } else {
        header?.classList.add('bg-transparent');
        header?.classList.remove('bg-white', 'shadow-sm');
        header?.querySelectorAll('nav a:not(.bg-green-600)').forEach(el => {
          el.classList.add('text-white', 'hover:text-green-200');
          el.classList.remove('text-neutral-700', 'hover:text-green-600');
        });
        header?.querySelector('.font-heading')?.classList.add('text-white', 'group-hover:text-green-100');
        header?.querySelector('.font-heading')?.classList.remove('text-neutral-900', 'group-hover:text-green-700');
      }
    }, { passive: true });
  }

  mobileMenuToggle?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.contains('hidden');
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
    mobileMenuToggle?.setAttribute('aria-expanded', isOpen ? 'true' : 'false');

    if (isOpen && variant === 'transparent') {
      header?.classList.remove('bg-transparent');
      header?.classList.add('bg-white', 'shadow-sm');
    }
  });
</script>
