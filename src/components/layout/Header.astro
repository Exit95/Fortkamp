---
import config from '../../data/config.json';

interface Props {
  variant?: 'transparent' | 'solid';
}

const { variant = 'solid' } = Astro.props;

const navItems = [
  { label: 'Startseite', href: '/' },
  { label: 'Leistungen', href: '/leistungen/' },
  { label: 'Projekte', href: '/projekte/' },
  { label: 'Kontakt', href: '/kontakt/' }
];
---

<header
  id="site-header"
  class:list={[
    'fixed top-0 left-0 right-0 z-50 transition-all duration-200',
    variant === 'transparent' ? 'bg-transparent' : 'bg-white shadow-sm'
  ]}
  data-variant={variant}
>
  <div class="container">
    <div class="flex items-center justify-between h-16 lg:h-20">
	      <a href="/" class="flex items-center group" aria-label="Galabau Fortkamp, Startseite">
        <img
          src="/fortkamplogo.jpeg"
          alt="Galabau Fortkamp Logo"
          class="h-12 lg:h-16 w-auto transition-opacity group-hover:opacity-90"
        />
      </a>

      <nav class="hidden lg:flex items-center gap-8" aria-label="Hauptnavigation">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              "text-sm font-medium transition-colors py-2",
              variant === 'transparent' ? 'text-white hover:text-green-200' : 'text-neutral-700 hover:text-green-600'
            ]}
          >
            {item.label}
          </a>
        ))}
      </nav>

      <div class="flex items-center gap-3">
        <button
          type="button"
          class:list={[
            "lg:hidden p-2 rounded-lg transition-colors",
            variant === 'transparent' ? 'text-white hover:bg-white/10' : 'text-neutral-700 hover:bg-neutral-100'
          ]}
          aria-label="Menu Ã¶ffnen"
          aria-expanded="false"
          aria-controls="mobile-menu"
          id="mobile-menu-toggle"
        >
          <svg class="w-6 h-6" id="menu-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg class="w-6 h-6 hidden" id="close-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu with Animation -->
  <div
    id="mobile-menu"
    class="lg:hidden fixed inset-0 top-16 bg-white z-40 transform translate-x-full transition-transform duration-300 ease-in-out"
    aria-hidden="true"
  >
    <div class="container py-6 h-full overflow-y-auto">
      <nav class="space-y-2" aria-label="Mobile Navigation">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="flex items-center justify-between px-4 py-4 text-lg font-medium text-neutral-700 hover:bg-green-50 hover:text-green-700 rounded-xl transition-colors active:bg-green-100 touch-manipulation"
          >
            <span>{item.label}</span>
            <svg class="w-5 h-5 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        ))}
      </nav>

      <!-- Mobile Contact Section -->
      <div class="mt-8 pt-6 border-t border-neutral-200">
        <p class="px-4 text-sm text-neutral-500 mb-4">Kontaktieren Sie uns</p>
        <a
          href={`tel:${config.contact.phone}`}
          class="flex items-center gap-3 px-4 py-3 text-neutral-700 hover:bg-neutral-50 rounded-xl transition-colors touch-manipulation"
        >
          <svg class="w-5 h-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span>{config.contact.phoneDisplay}</span>
        </a>
        <a
          href={`mailto:${config.contact.email}`}
          class="flex items-center gap-3 px-4 py-3 text-neutral-700 hover:bg-neutral-50 rounded-xl transition-colors touch-manipulation"
        >
          <svg class="w-5 h-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <span>{config.contact.email}</span>
        </a>
        <a
          href={`https://wa.me/${config.contact.whatsapp}`}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-3 px-4 py-3 mt-4 bg-green-600 text-white rounded-xl hover:bg-green-700 transition-colors touch-manipulation"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          <span>WhatsApp schreiben</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Overlay for mobile menu -->
  <div id="mobile-overlay" class="lg:hidden fixed inset-0 bg-black/50 z-30 hidden opacity-0 transition-opacity duration-300"></div>
</header>

<script>
  const header = document.getElementById('site-header');
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileOverlay = document.getElementById('mobile-overlay');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  const variant = header?.dataset.variant;
  let isMenuOpen = false;

  // Scroll handler for transparent header
  if (variant === 'transparent') {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 100 || isMenuOpen) {
        header?.classList.remove('bg-transparent');
        header?.classList.add('bg-white', 'shadow-sm');
        header?.querySelectorAll('[class*="text-white"]').forEach(el => {
          el.classList.remove('text-white', 'hover:text-green-200', 'hover:bg-white/10');
          el.classList.add('text-neutral-700', 'hover:text-green-600', 'hover:bg-neutral-100');
        });
      } else {
        header?.classList.add('bg-transparent');
        header?.classList.remove('bg-white', 'shadow-sm');
        header?.querySelectorAll('nav a:not(.bg-green-600)').forEach(el => {
          el.classList.add('text-white', 'hover:text-green-200');
          el.classList.remove('text-neutral-700', 'hover:text-green-600');
        });
      }
    }, { passive: true });
  }

  // Open menu function
  function openMenu() {
    isMenuOpen = true;
    mobileMenu?.classList.remove('translate-x-full');
    mobileMenu?.classList.add('translate-x-0');
    mobileMenu?.setAttribute('aria-hidden', 'false');
    mobileOverlay?.classList.remove('hidden');
    setTimeout(() => mobileOverlay?.classList.add('opacity-100'), 10);
    menuIcon?.classList.add('hidden');
    closeIcon?.classList.remove('hidden');
    mobileMenuToggle?.setAttribute('aria-expanded', 'true');
    document.body.style.overflow = 'hidden';

    if (variant === 'transparent') {
      header?.classList.remove('bg-transparent');
      header?.classList.add('bg-white', 'shadow-sm');
    }
  }

  // Close menu function
  function closeMenu() {
    isMenuOpen = false;
    mobileMenu?.classList.add('translate-x-full');
    mobileMenu?.classList.remove('translate-x-0');
    mobileMenu?.setAttribute('aria-hidden', 'true');
    mobileOverlay?.classList.remove('opacity-100');
    setTimeout(() => mobileOverlay?.classList.add('hidden'), 300);
    menuIcon?.classList.remove('hidden');
    closeIcon?.classList.add('hidden');
    mobileMenuToggle?.setAttribute('aria-expanded', 'false');
    document.body.style.overflow = '';

    if (variant === 'transparent' && window.scrollY <= 100) {
      header?.classList.add('bg-transparent');
      header?.classList.remove('bg-white', 'shadow-sm');
    }
  }

  // Toggle menu
  mobileMenuToggle?.addEventListener('click', () => {
    if (isMenuOpen) {
      closeMenu();
    } else {
      openMenu();
    }
  });

  // Close on overlay click
  mobileOverlay?.addEventListener('click', closeMenu);

  // Close on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && isMenuOpen) {
      closeMenu();
    }
  });

  // Close menu on resize to desktop
  window.addEventListener('resize', () => {
    if (window.innerWidth >= 1024 && isMenuOpen) {
      closeMenu();
    }
  }, { passive: true });
</script>
