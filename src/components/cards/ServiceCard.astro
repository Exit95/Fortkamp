---
interface Props {
  title: string;
  description: string;
  image: string;
  href: string;
  features?: string[];
}

const { title, description, image, href, features = [] } = Astro.props;
---

<a
  href={href}
  class="group block card overflow-hidden touch-manipulation active:scale-[0.99] transition-transform"
  aria-label={`Mehr erfahren: ${title}`}
>
  <!-- Responsive image with aspect ratio -->
  <div class="relative aspect-[16/9] sm:aspect-[4/3] lg:aspect-[16/9] overflow-hidden bg-neutral-100">
    <img
      src={image}
	    alt={`${title}, Garten- und Landschaftsbau Leistung`}
      class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
      loading="lazy"
      decoding="async"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-neutral-900/60 to-transparent"></div>
    <!-- Title overlay on mobile for better visibility -->
    <div class="absolute bottom-0 left-0 right-0 p-3 sm:hidden">
      <h3 class="font-heading text-lg font-bold text-white line-clamp-1">
        {title}
      </h3>
    </div>
  </div>

  <!-- Content with responsive padding -->
  <div class="p-4 sm:p-5 md:p-6">
    <!-- Desktop title -->
    <h3 class="hidden sm:block font-heading text-lg md:text-xl font-bold text-neutral-900 mb-2 group-hover:text-green-700 transition-colors line-clamp-2">
      {title}
    </h3>

    <!-- Description -->
    <p class="text-neutral-600 text-sm mb-3 sm:mb-4 line-clamp-2 sm:line-clamp-3">
      {description}
    </p>

    <!-- Features list -->
    {features.length > 0 && (
      <ul class="space-y-1 sm:space-y-1.5 mb-3 sm:mb-4">
        {features.slice(0, 3).map((feature) => (
          <li class="flex items-start gap-1.5 sm:gap-2 text-xs sm:text-sm text-neutral-500">
            <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-green-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="line-clamp-1">{feature}</span>
          </li>
        ))}
      </ul>
    )}

    <!-- CTA link -->
    <div class="flex items-center gap-1.5 sm:gap-2 text-green-600 font-medium text-sm group-hover:text-green-700 transition-colors">
      <span>Mehr erfahren</span>
      <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </div>
  </div>
</a>
