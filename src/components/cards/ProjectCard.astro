---
interface Props {
  title: string;
  client: string;
  location: string;
  image: string;
  href: string;
  services?: string[];
}

const { title, client, location, image, href, services = [] } = Astro.props;
---

<a href={href} class="group block card overflow-hidden">
  <div class="relative h-56 overflow-hidden">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-neutral-900/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
    <div class="absolute bottom-0 left-0 right-0 p-4 translate-y-full group-hover:translate-y-0 transition-transform">
      <span class="text-white text-sm font-medium">Projekt ansehen</span>
    </div>
  </div>
  <div class="p-6">
    <div class="flex items-center gap-2 text-sm text-neutral-500 mb-2">
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      <span>{location}</span>
    </div>
    <h3 class="font-heading text-lg font-bold text-neutral-900 mb-1 group-hover:text-green-700 transition-colors">
      {title}
    </h3>
    <p class="text-neutral-600 text-sm mb-3">{client}</p>
    {services.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {services.slice(0, 3).map((service) => (
          <span class="px-2 py-1 bg-green-50 text-green-700 text-xs font-medium rounded">
            {service}
          </span>
        ))}
      </div>
    )}
  </div>
</a>
