---
interface Props {
  content: string;
  author: string;
  location: string;
  rating: number;
}

const { content, author, location, rating } = Astro.props;
---

<div class="bg-white rounded-xl p-6 shadow-md border border-neutral-100">
  <div class="flex gap-1 mb-4">
    {Array.from({ length: 5 }).map((_, i) => (
      <svg
        class:list={["w-5 h-5", i < rating ? "text-yellow-400" : "text-neutral-200"]}
        fill="currentColor"
        viewBox="0 0 20 20"
      >
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
    ))}
  </div>

  <blockquote class="text-neutral-700 leading-relaxed mb-4">
    "{content}"
  </blockquote>

  <div class="flex items-center gap-3">
    <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
      <span class="text-green-700 font-semibold text-sm">
        {author.split(' ').map(n => n[0]).join('').slice(0, 2)}
      </span>
    </div>
    <div>
      <p class="font-medium text-neutral-900 text-sm">{author}</p>
      <p class="text-neutral-500 text-xs">{location}</p>
    </div>
  </div>
</div>
