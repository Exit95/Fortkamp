---
import config from '../../data/config.json';
import LightRays from '../LightRays';

interface Props {
  headline: string;
  subheadline: string;
  backgroundImage?: string;
  ctaPrimary?: {
    label: string;
    href: string;
  };
  ctaSecondary?: {
    label: string;
    href: string;
  };
  showTrustIndicators?: boolean;
  useLightRays?: boolean;
}

const {
  headline,
  subheadline,
  backgroundImage,
  ctaPrimary = { label: 'Jetzt anrufen', href: `tel:${config.contact.phone}` },
  ctaSecondary = { label: 'WhatsApp schreiben', href: `https://wa.me/${config.contact.whatsapp}?text=Hallo,%20ich%20interessiere%20mich%20f%C3%BCr%20Ihre%20Leistungen.` },
  showTrustIndicators = true,
  useLightRays = false
} = Astro.props;
---

<!-- Hero Section with optimized mobile experience -->
<section class="relative min-h-[100svh] sm:min-h-[90vh] flex items-center pt-16 sm:pt-20">
  <!-- Background -->
  <div class="absolute inset-0 z-0">
    {useLightRays ? (
      <>
        <div class="absolute inset-0 bg-neutral-900"></div>
        <LightRays
          client:load
          raysOrigin="top-center"
          raysColor="#22c55e"
          raysSpeed={1.2}
          lightSpread={0.9}
          rayLength={1.5}
          followMouse={true}
          mouseInfluence={0.08}
          noiseAmount={0.05}
          distortion={0.03}
        />
        <div class="absolute inset-0 bg-gradient-to-b from-transparent via-neutral-900/30 to-neutral-900/70"></div>
      </>
    ) : (
      <>
        <img
          src={backgroundImage}
          alt=""
          class="w-full h-full object-cover"
          loading="eager"
          fetchpriority="high"
          decoding="async"
        />
        <div class="absolute inset-0 bg-gradient-to-b sm:bg-gradient-to-r from-neutral-900/90 via-neutral-900/75 to-neutral-900/50 sm:from-neutral-900/85 sm:via-neutral-900/70 sm:to-neutral-900/40"></div>
      </>
    )}
  </div>

  <div class="container relative z-10 py-12 sm:py-16 lg:py-32">
    <div class="max-w-2xl">
      <!-- Headline with responsive typography -->
      <h1 class="font-heading text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-[1.15] mb-4 sm:mb-6">
        {headline}
      </h1>

      <!-- Subheadline -->
      <p class="text-base sm:text-lg md:text-xl text-neutral-200 mb-6 sm:mb-8 leading-relaxed">
        {subheadline}
      </p>

      <!-- CTA Buttons - Stack on mobile, row on larger screens -->
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
        <a
          href={ctaPrimary.href}
          class="inline-flex items-center justify-center gap-2 px-5 sm:px-6 py-3 sm:py-3.5 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 active:bg-green-800 transition-colors touch-manipulation"
          data-track="hero_cta_primary"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          {ctaPrimary.label}
        </a>

        <a
          href={ctaSecondary.href}
          target={ctaSecondary.href.startsWith('http') ? '_blank' : undefined}
          rel={ctaSecondary.href.startsWith('http') ? 'noopener noreferrer' : undefined}
          class="inline-flex items-center justify-center gap-2 px-5 sm:px-6 py-3 sm:py-3.5 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-neutral-900 active:bg-neutral-100 transition-colors touch-manipulation"
          data-track="hero_cta_secondary"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          {ctaSecondary.label}
        </a>
      </div>

      <!-- Trust Indicators - Responsive grid on mobile -->
      {showTrustIndicators && (
        <div class="grid grid-cols-1 sm:flex sm:flex-wrap gap-3 sm:gap-x-8 sm:gap-y-4 mt-8 sm:mt-12 pt-6 sm:pt-8 border-t border-white/20">
          <div class="flex items-center gap-2 text-white">
            <svg class="w-4 h-4 sm:w-5 sm:h-5 text-green-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium">3 Jahre Erfahrung</span>
          </div>
          <div class="flex items-center gap-2 text-white">
            <svg class="w-4 h-4 sm:w-5 sm:h-5 text-green-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium">66+ Zufriedene Kunden</span>
          </div>
          <div class="flex items-center gap-2 text-white">
            <svg class="w-4 h-4 sm:w-5 sm:h-5 text-green-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium">Lokaler Service in Ahaus</span>
          </div>
        </div>
      )}
    </div>
  </div>

  <!-- Scroll indicator for mobile -->
  <div class="absolute bottom-6 left-1/2 -translate-x-1/2 z-10 sm:hidden animate-bounce">
    <svg class="w-6 h-6 text-white/70" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
