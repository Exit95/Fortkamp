---
import Layout from '../layouts/Layout.astro';
import ImageGrid from '../components/gallery/ImageGrid.astro';
import Lightbox from '../components/gallery/Lightbox.astro';
import projectsData from '../data/projects.json';
import type { Project } from '../lib/types';

const projects = projectsData as Project[];
const featuredProjects = projects.filter(p => p.featured);
---

<Layout title="Unsere Projekte - Galabau Fortkamp">
  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-green-700 text-white py-20">
      <div class="max-w-7xl mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Unsere Projekte</h1>
        <p class="text-xl text-green-100">
          Referenzen aus über 20 Jahren Erfahrung im Garten- und Landschaftsbau
        </p>
      </div>
    </section>

    <!-- Featured Projects -->
    {featuredProjects.length > 0 && (
      <section class="max-w-7xl mx-auto px-4 py-16">
        <h2 class="text-3xl font-bold mb-8">Ausgewählte Projekte</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredProjects.map((project) => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
              {/* Project Thumbnail */}
              {project.images && project.images.length > 0 ? (
                <div class="relative h-64 overflow-hidden">
                  <img
                    src={project.images[0].url}
                    alt={project.images[0].alt}
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                  />
                  {project.featured && (
                    <div class="absolute top-4 right-4 bg-green-600 text-white px-3 py-1 rounded-full text-sm font-medium">
                      Featured
                    </div>
                  )}
                </div>
              ) : (
                <div class="h-64 bg-gray-200 flex items-center justify-center">
                  <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              )}

              {/* Project Info */}
              <div class="p-6">
                <h3 class="text-xl font-bold mb-2">{project.title}</h3>
                {project.location && (
                  <p class="text-sm text-gray-600 mb-2">{project.location}</p>
                )}
                <p class="text-gray-700 mb-4">{project.summary}</p>
                
                {project.tags && project.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-4">
                    {project.tags.map((tag) => (
                      <span class="bg-green-100 text-green-700 px-2 py-1 rounded text-xs font-medium">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}

                <a
                  href={`#project-${project.id}`}
                  onclick={`showProjectDetails('${project.id}')`}
                  class="inline-block text-green-600 font-medium hover:text-green-700"
                >
                  Details ansehen →
                </a>
              </div>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- All Projects -->
    <section class="max-w-7xl mx-auto px-4 py-16">
      <h2 class="text-3xl font-bold mb-8">Alle Projekte</h2>
      <div class="space-y-12">
        {projects.map((project) => (
          <div id={`project-${project.id}`} class="bg-white rounded-xl shadow-lg overflow-hidden">
            {/* Project Header */}
            <div class="bg-gradient-to-r from-green-600 to-green-700 text-white p-6">
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="text-2xl font-bold mb-2">{project.title}</h3>
                  {project.location && (
                    <p class="text-green-100">{project.location}</p>
                  )}
                </div>
                {project.featured && (
                  <span class="bg-white/20 px-3 py-1 rounded-full text-sm">
                    Featured
                  </span>
                )}
              </div>
            </div>

            {/* Project Content */}
            <div class="p-6">
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                {project.client && (
                  <div>
                    <p class="text-sm text-gray-600">Kunde</p>
                    <p class="font-medium">{project.client}</p>
                  </div>
                )}
                {project.completedAt && (
                  <div>
                    <p class="text-sm text-gray-600">Abgeschlossen</p>
                    <p class="font-medium">{project.completedAt}</p>
                  </div>
                )}
                {project.duration && (
                  <div>
                    <p class="text-sm text-gray-600">Dauer</p>
                    <p class="font-medium">{project.duration}</p>
                  </div>
                )}
              </div>

              <p class="text-gray-700 mb-6">{project.summary}</p>

              {project.tags && project.tags.length > 0 && (
                <div class="mb-6">
                  <p class="text-sm font-medium text-gray-600 mb-2">Leistungen:</p>
                  <div class="flex flex-wrap gap-2">
                    {project.tags.map((tag) => (
                      <span class="bg-green-100 text-green-700 px-3 py-1 rounded-full text-sm font-medium">
                        {tag}
                      </span>
                    ))}
                  </div>
                </div>
              )}

              {/* Image Gallery */}
              {project.images && project.images.length > 0 && (
                <div>
                  <h4 class="text-lg font-bold mb-4">Projektbilder:</h4>
                  <ImageGrid images={project.images} columns={3} />
                </div>
              )}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Contact CTA -->
    <section class="bg-green-700 text-white py-16">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-4">Ihr Projekt mit uns?</h2>
        <p class="text-xl text-green-100 mb-8">
          Lassen Sie uns gemeinsam Ihren Traum verwirklichen
        </p>
        <a
          href="/kontakt"
          class="inline-block bg-white text-green-700 px-8 py-4 rounded-lg font-bold text-lg hover:bg-green-50 transition-colors"
        >
          Jetzt Projekt anfragen
        </a>
      </div>
    </section>
  </main>

  <!-- Lightbox Component -->
  <Lightbox />
</Layout>

