---
import ServiceCategorySelect from '../components/admin/ServiceCategorySelect.astro';

export const prerender = false;

// Login credentials aus Umgebungsvariablen
const ADMIN_USER = process.env.ADMIN_USER || 'admin';
const ADMIN_PASS = process.env.ADMIN_PASSWORD || '';

// Check session
const session = await Astro.session?.get('user');
let isLoggedIn = session === ADMIN_USER;

// Handle login form
if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('action');

  if (action === 'login') {
    const username = formData.get('username');
    const password = formData.get('password');

    if (username === ADMIN_USER && password === ADMIN_PASS) {
      await Astro.session?.set('user', ADMIN_USER);
      return Astro.redirect('/admin-new');
    }
  } else if (action === 'logout') {
    await Astro.session?.destroy();
    return Astro.redirect('/admin-new');
  }
}
