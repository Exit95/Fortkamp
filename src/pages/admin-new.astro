          </div>

          <!-- Simple Image Upload -->
          <div class="border-t pt-4">
            <label class="block text-sm font-medium mb-2">Bilder hochladen</label>
            <input
              type="file"
              id="service-image-upload"
              accept="image/jpeg,image/jpg,image/png,image/webp"
              multiple
              class="w-full border rounded-lg px-4 py-2"
            />
            <p class="text-xs text-gray-500 mt-1">JPG, PNG oder WebP (max. 50MB)</p>
            <div id="service-upload-progress" class="hidden mt-2">
              <div class="bg-gray-200 rounded-full h-2">
                <div id="service-progress-bar" class="bg-green-600 h-full transition-all" style="width: 0%"></div>
              </div>
              <p id="service-progress-text" class="text-sm text-gray-600 mt-1"></p>
            </div>
            <div id="service-images-list" class="mt-4 grid grid-cols-3 gap-2"></div>
          </div>

          <div>
            <label class="block text-sm font-medium mb-1">Features (eine pro Zeile)</label>
            <textarea id="service-features" class="w-full border rounded-lg px-4 py-2" rows="4"></textarea>
          </div>

          <div>
            <label class="block text-sm font-medium mb-1">Reihenfolge</label>
            <input type="number" id="service-order" class="w-full border rounded-lg px-4 py-2" min="1">
          </div>

          <div class="flex gap-4 pt-4">
            <button type="submit" class="flex-1 bg-green-600 text-white py-2 rounded-lg">Speichern</button>
            <button type="button" onclick="closeServiceModal()" class="flex-1 bg-gray-300 py-2 rounded-lg">Abbrechen</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Project Edit Modal -->
  <div id="project-modal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4">
    <div class="bg-white rounded-xl shadow-2xl max-w-4xl w-full max-h-[90vh] overflow-y-auto">
      <div class="p-6">
        <h3 class="text-xl font-bold mb-4">Projekt bearbeiten</h3>
        <form id="project-form" class="space-y-4">
          <input type="hidden" id="project-id">
          <input type="hidden" id="project-index">

          <div>
            <label class="block text-sm font-medium mb-1">Titel</label>
            <input type="text" id="project-title" class="w-full border rounded-lg px-4 py-2" required>
