---
import Layout from '../layouts/Layout.astro';
import ImageGrid from '../components/gallery/ImageGrid.astro';
import Lightbox from '../components/gallery/Lightbox.astro';
import servicesData from '../data/services.json';
import type { Service } from '../lib/types';

const services = servicesData as Service[];
---

<Layout title="Unsere Leistungen - Galabau Fortkamp">
  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-green-700 text-white py-20">
      <div class="max-w-7xl mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Unsere Leistungen</h1>
        <p class="text-xl text-green-100">
          Professionelle Garten- und Landschaftsbau-Dienstleistungen
        </p>
      </div>
    </section>

    <!-- Services Grid -->
    <section class="max-w-7xl mx-auto px-4 py-16">
      <div class="space-y-16">
        {services.sort((a, b) => a.order - b.order).map((service) => (
          <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <!-- Service Header -->
            <div class="bg-gradient-to-r from-green-600 to-green-700 text-white p-6">
              <h2 class="text-3xl font-bold mb-2">{service.title}</h2>
              <p class="text-green-100">{service.shortDescription}</p>
            </div>

            <!-- Service Content -->
            <div class="p-6">
              {service.features && service.features.length > 0 && (
                <div class="mb-6">
                  <h3 class="text-xl font-bold mb-3">Unsere Leistungen:</h3>
                  <ul class="grid grid-cols-1 md:grid-cols-2 gap-2">
                    {service.features.map((feature) => (
                      <li class="flex items-start gap-2">
                        <span class="text-green-600 mt-1">✓</span>
                        <span>{feature}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}

              {/* Image Gallery */}
              {service.images && service.images.length > 0 && (
                <div>
                  <h3 class="text-xl font-bold mb-4">Referenzbilder:</h3>
                  <ImageGrid images={service.images} columns={3} />
                </div>
              )}

              {/* No Images Placeholder */}
              {(!service.images || service.images.length === 0) && (
                <div class="text-center py-8 text-gray-400">
                  <svg class="w-16 h-16 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <p>Noch keine Bilder verfügbar</p>
                </div>
              )}
            </div>

            <!-- CTA Button -->
            <div class="p-6 bg-gray-50 border-t">
              <a
                href="/kontakt"
                class="inline-block bg-green-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-green-700 transition-colors"
              >
                Jetzt anfragen →
              </a>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Contact CTA -->
    <section class="bg-green-700 text-white py-16">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-4">Haben Sie Fragen zu unseren Leistungen?</h2>
        <p class="text-xl text-green-100 mb-8">
          Kontaktieren Sie uns für ein unverbindliches Beratungsgespräch
        </p>
        <a
          href="/kontakt"
          class="inline-block bg-white text-green-700 px-8 py-4 rounded-lg font-bold text-lg hover:bg-green-50 transition-colors"
        >
          Kontakt aufnehmen
        </a>
      </div>
    </section>
  </main>

  <!-- Lightbox Component -->
  <Lightbox />
</Layout>

<style>
  /* Custom styles if needed */
  .service-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
</style>

