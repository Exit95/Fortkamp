---
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/Hero.astro';
import Services from '../components/sections/Services.astro';
import About from '../components/sections/About.astro';
import Projects from '../components/sections/Projects.astro';
import CTA from '../components/sections/CTA.astro';
---

<Layout headerVariant="transparent">
  <Hero
    headline="Ihr Garten- und Landschaftsbauer in Ahaus"
    subheadline="Professionelle Gartenpflege, Landschaftsbau und Winterdienst - zuverlässig, kompetent und lokal. Wir verwandeln Ihre Außenbereiche in grüne Oasen."
    useLightRays={true}
  />

  <Services limit={6} />

  <About />

  <Projects featured={true} limit={3} />

  <CTA />
</Layout>
